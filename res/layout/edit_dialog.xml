<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edit_dialog_et"
        android:layout_width="wrap_content"
        
        
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

      
    </EditText>

    <Button
        android:id="@+id/edit_dialog_reset"
        android:layout_width="110sp"
        android:layout_height="50sp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/edit_dialog_et"
        android:layout_centerHorizontal="true"
        android:text="Reset" />

    <Button
        android:id="@+id/edit_dialog_ok"
        android:layout_width="110sp"
        android:layout_height="50sp"
        android:background="@drawable/buttonshape"
         android:layout_centerHorizontal="true"
       
       
        android:layout_below="@+id/edit_dialog_reset"
        android:text="OK" />

    <Button
        android:id="@+id/delete_this"
       android:layout_width="110sp"
        android:layout_height="50sp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/edit_dialog_ok"
        android:layout_centerHorizontal="true"
        android:text="Delete" />

</RelativeLayout>
